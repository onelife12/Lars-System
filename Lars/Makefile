SUBDIRS = lars_reactor lars_dns lars_reporter lars_lb_agent

.PHONY: all

all:
	@list='$(SUBDIRS)'; for subdir in $$list; do \
        	echo "Clean in $$subdir";\
            $(MAKE) -C $$subdir;\
    done	

.PHONY: clean

clean:
	@echo Making clean
	@list='$(SUBDIRS)'; for subdir in $$list; do \
          echo "Clean in $$subdir";\
          $(MAKE) -C $$subdir clean;\
    done
